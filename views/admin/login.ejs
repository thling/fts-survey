<!doctype html>
<html>
<title>Admin Login</title>
<head>
    <%- include ../head.ejs %>
    <link rel="stylesheet" href="/admin/css/login.css"/>
    <script type="text/javascript" src="/admin/js/login.js"></script>
</head>
<body>
    <div id="toast"></div>
    <%- include admin-navbar %>

    <div id="contents">
        <form id="loginForm">
            <div class="row">
                <div class="col s10 offset-s1 m8 offset-m2 l4 offset-l4 input-field">
                    <input id="username" type="text" class="validate">
                    <label for="username">Username</label>
                </div>
            </div>
            <div class="row">
                <div class="col s10 offset-s1 m8 offset-m2 l4 offset-l4 input-field">
                    <input id="password" type="password" class="validate">
                    <label for="password">Password</label>
                </div>
            </div>

            <div class="row">
                <button class="btn waves-effect waves-light col s6 offset-s3 m2 offset-m8 l1 offset-l7" type="submit" id="login">
                    Login
                </button>
            </div>
        </form>
    </div>
</body>
</html>
